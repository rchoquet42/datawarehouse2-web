<div class="w3-bar">
    <button id="title-slides" class="chaptitle w3-mobile w3-bar-item w3-button w3-indigo w3-margin-right" onclick=" openTeaching('slides')">Lecture Slides</button>
    <button id="title-figpdf" class="chaptitle w3-mobile w3-bar-item w3-button w3-indigo w3-margin-right" onclick=" openTeaching('figpdf')">Figures in PDF</button>
    <button id="title-figEpdf" class="chaptitle w3-mobile w3-bar-item w3-button w3-indigo w3-margin-right" onclick=" openTeaching('figEpdf')">Figures in Encapsulated PDF</button>
    <button id="title-figpng" class="chaptitle w3-mobile w3-bar-item w3-button w3-indigo w3-margin-right" onclick=" openTeaching('figpng')">Figures in PNG</button>
    <button id="title-answers" class="chaptitle w3-mobile w3-bar-item w3-button w3-indigo w3-margin-right" onclick=" openTeaching('answers')">Answers to Exercises</button>
    <button id="title-samples" class="chaptitle w3-mobile w3-bar-item w3-button w3-grey w3-margin-right" onclick=" openTeaching('samples')">Sample Databases</button>
</div>


<div id="slides" class="w3-container materials w3-light-gray " style="display:block">
  <h2>Lecture Slides</h2>
  <ul>
    <% @slides.each do |chap| %>
      <li><%= link_to  "#{chap}", "/chapters/lecture_slides/#{chap}" %></li>
    <% end %>
  </ul>
</div>
<div id="figpdf" class="w3-container materials w3-light-gray " style="display:none">
  <h2>Figures in PDF</h2>
  <ul>
    <% @figpdf.each do |chap| %>
      <li><%= link_to  "#{chap}", "/chapters/figures_pdf/#{chap}" %></li>
    <% end %>
  </ul>
</div>
