  <h2>Sample Databases</h2>
  <ul>
    <% @samples.each do |chap| %>
      <li><%= link_to  "#{chap}", "/chapters/sample_databases/#{chap}" %></li>
    <% end %>
  </ul>
</div>











<script>
    function openTeaching(teach) {
        var i;
        var x = document.getElementsByClassName("materials");
        var y = document.getElementsByClassName("chaptitle");

        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        for (i = 0; i < y.length; i++) {
            y[i].classList.remove('w3-light-gray');
            y[i].classList.add('w3-indigo');
        }
        const title = "title-" + teach
        document.getElementById(teach).style.display = "block";
        document.getElementById(title).classList.remove('w3-indigo');
        document.getElementById(title).classList.add('w3-light-gray');
    }
</script>