<%= form_with url: login_path, scope: :user do |form| %>
    <table>
    <tr>
      <td><%= form.label :email %></td>
      <td><%= form.email_field :email, required: true %></td>
    </tr>
    <tr>
      <td><%= form.label :password %></td>
      <td><%= form.password_field :password, required: true %></td>
    </tr>
    <tr>
      <td><%= form.label :remember_me %></td>
      <td><%= form.check_box :remember_me %></td>
    </tr>
    <tr>
      <td><a href="/passwords/new">Forgot password ?</a></td>
    </tr>
    </table>

  <%= form.submit "Sign In" %>
  <br>
  <h4><a href="/sign_up">No account yet ? Create one here </a></h4>
<% end %>
